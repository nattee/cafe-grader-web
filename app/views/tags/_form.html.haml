= simple_form_for @tag, wrapper: :horizontal_form do |f|
  = f.error_notification
  = f.input :name
  = f.input :description
  = f.input :public
  = f.input :primary
  = f.input :color, as: :color, input_html: {class: 'form-control-color'}
  = f.submit class: 'btn btn-primary'
  = link_to 'Back', tags_path, class: 'btn btn-outline-secondary mx-2'
