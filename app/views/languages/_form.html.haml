-# frozen_string_literal: true
= simple_form_for @language, wrapper: :horizontal_form do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  = f.input :name
  = f.input :pretty_name
  = f.input :ext
  = f.input :common_ext
  = f.input :binary, wrapper: :horizontal_boolean

  = f.submit class: 'btn btn-primary'
  = link_to 'Back', languages_path, class: 'btn btn-outline-secondary mx-2'
